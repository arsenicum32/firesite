body
  width 100%
  margin 0
  padding 0
  font-family Helvetica Neue
  button
    font-size 1em
    border 1px solid black
    background white
    font-weight bold
  input
    font-size 1.2em
    outline none
    border none
    background #eee
  a
    text-decoration none
    color black
    font-weight bolder
    cursor pointer
    border-bottom 1px solid black
  ul
    margin 0
    padding 0
    list-style-type none
  li
    border 1px solid black
    width 80%
    max-width 400px
    height 250px
    margin 0
    padding 0
    font-size 2em
